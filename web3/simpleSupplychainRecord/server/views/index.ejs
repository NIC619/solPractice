<% layout('layout_html') -%>
	<h1>
		<a href="/">Drug Supply Chain System Demonstration</a>
	</h1>
	<div class="table-responsive">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Manufacturers</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% if(debugMsg != "Contract not yet deployed!" && debugMsg != "Contract initiation failed") { %>
					<% for( var i = 0 ; i < drugManufacturerList.length ; i++ ) { %>
						<tr>
							<td>
								<%= drugManufacturerList[i] %>
							</td>
							<td>
								<a href="/getDrugsByManufacturer?addr=<%= drugManufacturerList[i] %>" class="btn btn-primary">Drugs Manufactured</a>
							</td>
						</tr>
					<% } %>
				<% } %>
				</tbody>
			</table>
	</div>
	<% if(debugMsg == "Contract not yet deployed!" || debugMsg == "Contract initiation failed") { %>
		<a href="/deploy" class="btn btn-primary">Deploy</a>
	<% } else { %>
		<div>
			<form action="/getDrugByName" method="GET">
				Drug Name:
				<input type="text" name="name">
				<input type="submit" value="Search" class="btn btn-primary">
			</form>
		</div>
		<% if(isAuthorized) { %>
			<div>
				<a href="/addNewDrug" class="btn btn-primary">Add New Drug</a>
			</div>
		<% } %>
	<% } %>
	<br>
	<h3>
		<font color="red">
			<%= debugMsg %>
		</font>
	</h3>
	<script src="https://cdn.rawgit.com/ethereum/web3.js/develop/dist/web3.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
