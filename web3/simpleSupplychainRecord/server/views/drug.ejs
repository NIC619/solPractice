<% layout('layout_html') -%>
	<h1>
		<a href="/">Drug Supply Chain System Demonstration</a>
	</h1>
	<div class="table-responsive">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Drug Name</th>
					<th>Manufacturer</th>
					<th>Amount</th>
					<th>Manufactured Date</th>
					<th>Expiration Date</th>
					<th>Number of Upstream Drugs</th>
					<th>Number of Downstream Drugs</th>
					<% if(isAuthorized) { %>
						<th></th>
						<th></th>
					<% } %>
				</tr>
			</thead>
			<tbody>
				<% if(drug.owner != "0x0000000000000000000000000000000000000000") { %>
					<tr>
						<td>
							<%= drug.name %>
						</td>
						<td>
							<%= drug.owner %>
						</td>
						<td>
							<%= drug.amount %>
						</td>
						<td>
							<%= drug.manuDate %>
						</td>
						<td>
							<%= drug.expDate %>
						</td>
						<td>
							<%= drug.upstreamDrugAmount %>
						</td>
						<td>
							<%= drug.downstreamDrugAmount %>
						</td>
						<% if(isAuthorized) { %>
							<td>
								<a href="/addDrugStream?addr=<%= drug.owner %>&stream=up&name=<%= drug.name %>" class="btn btn-primary">Add Upstream Drug</a>
							</td>
							<td>
								<a href="/addDrugStream?addr=<%= drug.owner %>&stream=down&name=<%= drug.name %>" class="btn btn-primary">Add Downstream Drug</a>
							</td>
						<% } %>
					</tr>
				<% } %>
				
			</tbody>
		</table>
	</div>
	<div>
		<div class="table-responsive" style="float: left; width: 500px;  margin-left: 100px;">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Upstream Drug Name</th>
						<th>Amount</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i = 0; i < upstreamDrugList.length ; i++) { %>
						<tr>
							<td>
								<%= upstreamDrugList[i].name %>
							</td>
							<td>
								<%= upstreamDrugList[i].amount %>
							</td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		<div class="table-responsive">
			<table class="table table-bordered" style="float: left; width: 500px; margin-left: 200px;">
				<thead>
					<tr>
						<th>Downstream Drug Name</th>
						<th>Amount</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i = 0; i < downstreamDrugList.length ; i++) { %>
						<tr>
							<td>
								<%= downstreamDrugList[i].name %>
							</td>
							<td>
								<%= downstreamDrugList[i].amount %>
							</td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
	<% if(debugMsg == "Contract not yet deployed!") { %>
		<a href="/deploy" class="btn btn-primary">Deploy</a>
	<% } else { %>
		<div>
			<form action="/getDrugByName" method="GET">
				Drug Name:
				<input type="text" name="name">
				<input type="submit" value="Search" class="btn btn-primary">
			</form>
		</div>
		<% if(isAuthorized) { %>
			<div>
				<a href="/addNewDrug" class="btn btn-primary">Add New Drug</a>
			</div>
		<% } %>
	<% } %>
